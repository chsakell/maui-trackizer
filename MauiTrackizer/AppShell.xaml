<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiTrackizer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiTrackizer"
    xmlns:views="clr-namespace:MauiTrackizer.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="False">

    <ShellContent
        Title="Signup"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="SignUpOptions" />

    <ShellContent
        Title="Signup options"
        ContentTemplate="{DataTemplate views:SignUpOptionsPage}"
        Route="SignUpOptions" />

    <ShellContent
        Title="Welcome "
        ContentTemplate="{DataTemplate views:WelcomePage}"
        Route="Welcome" />

    <ShellContent
        Title="Signup options"
        ContentTemplate="{DataTemplate views:SignUpPage}"
        Route="SignUpOptions" />

    <ShellContent
        Title="Signup options"
        ContentTemplate="{DataTemplate views:SignUpOptionsPage}"
        Route="SignUpOptions" />



</Shell>
